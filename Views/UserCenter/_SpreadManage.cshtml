<script>
    //直属下线总人
    function AgentNum() {
        GetUserCenterPartial("AgentImmediate");
    }
    //今日登录的直属下线
    function AgentLastDateNum() {
        GetUserCenterPartial("AgentImmediateTLogon");
    }
    //新注册的直属下线
    function AgentRegDateNum() {
        GetUserCenterPartial("AgentImmediateTReg");
    }
</script>