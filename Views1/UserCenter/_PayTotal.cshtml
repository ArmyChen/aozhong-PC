                        }
                        else {
                            if (account != account2) {
                                alert("两次输入的账号不一致！");
                                return;
                            }
                        }
                        var re = /^[1-9]+[0-9]*$/;
                        if (amount == "") {
                            alert("请填写充值金额。");
                            return;
                        }
                        else {
                            if (!re.test(amount)) {
                                alert("充值金额应为大于0的整数！");
                                return false;
                            }
                        }
                        $("#" + formId).submit();
                    }
                    function CheckPayAlipay() {
                        var account = $("#qyfalipay_bank_payaccount").val();
                        var account2 = $("#qyfalipay_bank_payaccount2").val(); 
